<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToWidth="true" styleClass="main-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yousif.attemp2.BaggageTrackingController">
   <content>
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="section-title" text="Baggage Tracking System" />
            
            <!-- Overview Statistics -->
            <GridPane hgap="15.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox styleClass="stat-card" GridPane.columnIndex="0">
                     <children>
                        <Label styleClass="stat-card-title" text="Bags Processed Today" />
                        <Label fx:id="bagsProcessedValue" styleClass="stat-card-value" text="2,478" />
                     </children>
                  </VBox>
                  <VBox styleClass="stat-card" GridPane.columnIndex="1">
                     <children>
                        <Label styleClass="stat-card-title" text="Avg. Processing Time" />
                        <Label fx:id="avgProcessingTimeValue" styleClass="stat-card-value" text="18 min" />
                     </children>
                  </VBox>
                  <VBox styleClass="stat-card" GridPane.columnIndex="2">
                     <children>
                        <Label styleClass="stat-card-title" text="Misrouted Bags" />
                        <Label fx:id="misroutedBagsValue" styleClass="stat-card-value" text="15" />
                     </children>
                  </VBox>
                  <VBox styleClass="stat-card" GridPane.columnIndex="3">
                     <children>
                        <Label styleClass="stat-card-title" text="System Efficiency" />
                        <Label fx:id="systemEfficiencyValue" styleClass="stat-card-value" text="97.5%" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
            
            <!-- Baggage Search -->
            <VBox styleClass="content-panel">
               <children>
                  <Label styleClass="section-title" text="Baggage Search" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="baggageIdField" prefWidth="200.0" promptText="Enter Baggage ID" />
                        <Button mnemonicParsing="false" onAction="#searchBaggage" text="Search">
                           <graphic>
                              <FontIcon iconLiteral="fas-search" />
                           </graphic>
                        </Button>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Filter by Flight:" />
                              <ComboBox fx:id="flightFilter" prefWidth="150.0" />
                              <Button mnemonicParsing="false" onAction="#applyFilters" text="Apply" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Baggage Tracking Table -->
            <VBox styleClass="content-panel">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label styleClass="section-title" text="Baggage Items" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onAction="#addBaggage" text="Add Baggage">
                                 <graphic>
                                    <FontIcon iconLiteral="fas-plus-circle" />
                                 </graphic>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#editBaggage" text="Edit Baggage">
                                 <graphic>
                                    <FontIcon iconLiteral="fas-edit" />
                                 </graphic>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#deleteBaggage" text="Delete Baggage">
                                 <graphic>
                                    <FontIcon iconLiteral="fas-trash-alt" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  
                  <TableView fx:id="baggageTable">
                     <columns>
                        <TableColumn fx:id="baggageIdColumn" prefWidth="120.0" text="Baggage ID" />
                        <TableColumn fx:id="passengerNameColumn" prefWidth="150.0" text="Passenger" />
                        <TableColumn fx:id="flightColumn" prefWidth="100.0" text="Flight" />
                        <TableColumn fx:id="locationColumn" prefWidth="150.0" text="Current Location" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                        <TableColumn fx:id="handlingTimeColumn" prefWidth="100.0" text="Handling Time" />
                        <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Baggage Flow Visualization -->
            <GridPane hgap="15.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="300.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <!-- Baggage Route Visualization -->
                  <VBox styleClass="content-panel" GridPane.columnIndex="0">
                     <children>
                        <Label styleClass="section-title" text="Baggage Flow Visualization" />
                        <Pane fx:id="baggageFlowPane" prefHeight="250.0" VBox.vgrow="ALWAYS" />
                        
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Label text="Legend:" />
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="status-indicator, status-check-in" text=" " />
                                    <Label text="Check-in" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="status-indicator, status-screening" text=" " />
                                    <Label text="Screening" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="status-indicator, status-sorting" text=" " />
                                    <Label text="Sorting" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="status-indicator, status-loading" text=" " />
                                    <Label text="Loading" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="status-indicator, status-delivered" text=" " />
                                    <Label text="Delivered" />
                                 </children>
                              </HBox>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Baggage Metrics -->
                  <VBox styleClass="content-panel" GridPane.columnIndex="1">
                     <children>
                        <Label styleClass="section-title" text="Processing Metrics" />
                        <BarChart fx:id="processingTimeChart" legendVisible="false" title="Avg. Processing Time by Stage">
                           <xAxis>
                              <CategoryAxis label="Stage" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis label="Minutes" />
                           </yAxis>
                        </BarChart>
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </VBox>
   </content>
</ScrollPane> 