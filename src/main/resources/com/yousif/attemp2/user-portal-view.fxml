<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="user-portal-container" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yousif.attemp2.UserPortalController">
   <left>
      <VBox fx:id="menuBar" prefWidth="200.0" spacing="5.0" styleClass="user-sidebar">
         <children>
            <Label styleClass="user-logo" text="ELkaror International Airport">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Separator />
            
            <Button fx:id="dashboardBtn" mnemonicParsing="false" onAction="#showUserDashboard" styleClass="user-nav-button" text="My Dashboard">
               <graphic>
                  <FontIcon iconLiteral="fas-tachometer-alt" />
               </graphic>
            </Button>
            
            <Button fx:id="flightInfoBtn" mnemonicParsing="false" onAction="#showFlightInfo" styleClass="user-nav-button" text="Flight Info">
               <graphic>
                  <FontIcon iconLiteral="fas-plane" />
               </graphic>
            </Button>
            
            <Button fx:id="bookingBtn" mnemonicParsing="false" onAction="#showBooking" styleClass="user-nav-button" text="Book Ticket">
               <graphic>
                  <FontIcon iconLiteral="fas-ticket-alt" />
               </graphic>
            </Button>
            
            <Button fx:id="checkInBtn" mnemonicParsing="false" onAction="#showCheckIn" styleClass="user-nav-button" text="Check-in">
               <graphic>
                  <FontIcon iconLiteral="fas-check-circle" />
               </graphic>
            </Button>
            
            <Button fx:id="baggageBtn" mnemonicParsing="false" onAction="#showBaggage" styleClass="user-nav-button" text="Baggage">
               <graphic>
                  <FontIcon iconLiteral="fas-suitcase" />
               </graphic>
            </Button>
            
            <Button fx:id="waitingRoomBtn" mnemonicParsing="false" onAction="#showWaitingRoom" styleClass="user-nav-button" text="Waiting Room">
               <graphic>
                  <FontIcon iconLiteral="fas-couch" />
               </graphic>
            </Button>
            
            <Button fx:id="notificationsBtn" mnemonicParsing="false" onAction="#showNotifications" styleClass="user-nav-button" text="Notifications">
               <graphic>
                  <FontIcon iconLiteral="fas-bell" />
               </graphic>
            </Button>
            
            <Button fx:id="servicesBtn" mnemonicParsing="false" onAction="#showServices" styleClass="user-nav-button" text="Service Requests">
               <graphic>
                  <FontIcon iconLiteral="fas-concierge-bell" />
               </graphic>
            </Button>
            
            <VBox VBox.vgrow="ALWAYS" />
            
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" styleClass="logout-button" text="Logout">
               <graphic>
                  <FontIcon iconLiteral="fas-sign-out-alt" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="user-header">
         <children>
            <FontIcon iconLiteral="fas-user-circle" iconSize="24" />
            <Label fx:id="userNameLabel" styleClass="user-name-label" text="Welcome, User">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <StackPane fx:id="contentArea" styleClass="user-content-area">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane> 